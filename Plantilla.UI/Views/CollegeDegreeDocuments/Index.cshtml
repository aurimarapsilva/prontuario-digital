
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/Controllers/HomeController.css" rel="stylesheet" />

<div class="row documentTable">
    <div class="col-md-12 tableContainer">
        <div class="row">
            <div class="col-md-6">
                <h4 class="pageTitle"><b>Certificación de títulos universitarios</b></h4>
            </div>
            <div class="col-md-6">
                <div class="btn-group-style text-right" role="group" aria-label="Button group">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addDegreeModal">Agregar</button>
                    <button type="button" class="btn btn-primary">Modifcar</button>
                    <button type="button" class="btn btn-primary">Eliminar</button>
                    <button type="button" class="btn btn-primary">Salir</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" id="collegeDegreeDocumentsTable">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">TIPO</th>
                            <th scope="col">NOMBRE</th>
                            <th scope="col">AÑO</th>
                            <th scope="col">INSTITUCIÓN</th>
                            <th scope="col">PAÍS</th>
                            <th scope="col">ARCHIVOS</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="addDegreeModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Agregar certificación de título universitario</h4>
      </div>
      <div class="modal-body">
        <form>
            <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="exampleFormControlSelect1">1.1 Tipo de título</label>
                    <select class="form-control" id="typeOfDegree" name="typeOfDegree">
                      <option>Bachillerato universitario</option>
                      <option>Licenciatura</option>
                      <option>Maestría</option>
                      <option>Doctorado</option>
                      <option>Especialidad</option>
                      <option>Otro</option>
                    </select>
                  </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">1.2 Subir PDF</label>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.3 Nombre el título</label>
                        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.4 Año</label>
                        <input type="number" class="form-control" id="year" placeholder="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.5 Nombre de la universidad</label>
                        <input type="text" class="form-control" id="institution" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.6 País</label>
                        <select class="form-control" id="degreeCountries" name="typeOfDegree">
                        </select>
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
        <button id="addCollegeDegreeDocumentBtn"type="submit" class="btn btn-primary" style="margin: auto;">Agregar</button>
      </div>
    </div>
  </div>
</div>

<script src="~/Scripts/Controllers/CollegeDegreeDocuments.js"></script>
