@*  *@
@{
    ViewBag.Title = "Presentations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Styles/Controllers/HomeController.css" rel="stylesheet" />

<div class="row documentTable">
    <div class="col-md-12 tableContainer">
        <div class="row">
            <div class="col-md-6">
                <h4 class="pageTitle"><b>Ponencias</b></h4>
            </div>
            <div class="col-md-6">
                <div class="btn-group-style text-right" role="group" aria-label="Button group">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Agregar</button>
                    <button type="button" class="btn btn-primary">Modifcar</button>
                    <button type="button" class="btn btn-primary">Eliminar</button>
                    <button type="button" class="btn btn-primary">Salir</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" id="collegeDegreeDocumentsTable">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">EVENTO</th>
                            <th scope="col">FECHA</th>
                            <th scope="col">LUGAR</th>
                            <th scope="col">NOMBRE</th>
                            <th scope="col">ARCHIVOS</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Agregar certificación de título universitario</h4>
      </div>
      <div class="modal-body">
        <form>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.1 Fecha del evento</label>
                        <input type="text" class="form-control" id="date" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlFile1">1.2 Subir PDF</label>
                        <input type="file" class="form-control-file" id="file">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.3 Nombre de la ponencia</label>
                        <input type="text" class="form-control" id="name" placeholder="">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">1.4 Lugar de la ponencia</label>
                        <input type="number" class="form-control" id="place" placeholder="">
                    </div>
                </div>
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
        <button id="addCollegeDegreeDocumentBtn" type="submit" class="btn btn-primary" style="margin: auto;">Agregar</button>
      </div>
    </div>
  </div>
</div>

<script src="~/Scripts/Controllers/PresentationsDocuments.js"></script>
